  "devDependencies": {
    "@bluzzi/eslint-config": "^0.8.8",
    "@swc-node/register": "^1.6.3",
    "@swc/core": "^1.3.46",
    "@types/node": "^18.15.11",
    "@vitest/ui": "^0.29.8",
    "eslint": "^8.37.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3",
    "vitest": "^0.29.8"
  },
  "eslintConfig": {
    "extends": "@bluzzi"
  }
}
